<Window x:Class="BeTaskManagement.Views.CommentHistoryView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeTaskManagement.Views"
        mc:Ignorable="d"
        Title="CommentHistoryView" Height="450" Width="800">
    <Grid Background="{StaticResource BackgrountLighterGrey}" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Comment History of Changes"
                   FontSize="22"
                   FontWeight="Bold"
                   Foreground="{StaticResource DefaultText}"
                   Margin="5 0 0 10" />

        <ListView Grid.Row="1"
                  ItemsSource="{Binding CommentHistory}"
                  Background="Transparent"
                  BorderThickness="0"
                  Margin="0 10 0 0"
                  HorizontalContentAlignment="Stretch">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border Background="{StaticResource BackgrountDarkerGrey}"
                            CornerRadius="5"
                            Padding="10"
                            Margin="0 5">
                        <StackPanel>
                            <TextBlock Text="{Binding ChangedProperty, StringFormat='Property changed: {0}'}" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource DefaultText}"/>
                            <TextBlock Text="{Binding OldText, StringFormat='Old Value: {0}'}" 
                                       Foreground="{StaticResource InformationalText}"
                                       FontStyle="Italic"
                                       FontSize="13"/>
                            <TextBlock Text="{Binding NewText,StringFormat='New Value: {0}'}" 
                                       Foreground="{StaticResource DefaultText}"
                                       FontSize="13"/>
                            <TextBlock Text="{Binding ModifiedOn, StringFormat='Changed at: {0:dd/MM/yyyy HH:mm}'}"
                                       Foreground="Gray"
                                       FontSize="12"
                                       HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
