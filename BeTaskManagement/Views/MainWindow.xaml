<Window x:Class="BeTaskManagement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeTaskManagement"
        xmlns:views="clr-namespace:BeTaskManagement.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="840" Width="1280"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition Width="440"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Navigation Panel-->
        <Rectangle Fill="{StaticResource MainThemeColor}" Grid.Column="0"/>

        <!-- Task List Panel-->
        <Rectangle Fill="{StaticResource BackgrountDarkerGrey}" Grid.Column="1"/>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            
            <!-- Task List Header-->
            <Label Style="{StaticResource Heading1}" 
                   Content="Tasks"
                   IsHitTestVisible="False"/>
            
            <!--Add New Task Button-->
            <Button Style="{StaticResource RoundedButton}"
                    Command="{Binding OpenBeTaskViewCommand}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Height="40"
                    Width="40"
                    Margin="0 0 20 0">
                <Viewbox>
                    <Path Data="{StaticResource PlusIcon}" 
                          Fill="{StaticResource OnAccent}"
                          Stretch="Uniform"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          Margin="2"/>
                </Viewbox>
            </Button>

            <TextBox x:Name="SearchTextBox"
                     Grid.Row="1"
                     Style="{StaticResource SearchBar}"
                     Margin="20 0"/>
            <Label Grid.Row="1"
                   IsHitTestVisible="False" 
                   Content="Search Tasks..."
                   Foreground="{StaticResource InformationalText}"
                   FontSize="16"
                   Visibility="{Binding Text.IsEmpty, ElementName=SearchTextBox, Converter={StaticResource BooleanToVisibilityConverter}}"
                   VerticalAlignment="Center"
                   Margin="25 0 0 0"/>
            <Button Grid.Row="1"
                    Style="{StaticResource SquareButton}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Padding="5"
                    Margin="7 7 30 7"
                    Command="{Binding OpenSearchPageCommand}">
                <Viewbox>
                    <Path Data="{StaticResource SearchIcon}" 
                      Fill="{StaticResource OnAccent}"
                      Stretch="Uniform"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Margin="2"/>
                </Viewbox>
            </Button>
            <Button Grid.Row="1"
                    Command="{Binding OpenDashboardCommand}"
                    Style="{StaticResource SquareButton}"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Padding="5"
                    Margin="7 7 70 7">
                <TextBlock Text="📊" FontSize="16"/>
            </Button>

            <!--Task List-->
            <ScrollViewer Grid.Row="2"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <views:BeTasksListControl/>
            </ScrollViewer>
            
        </Grid>
        
        <!-- Task Details Panel-->
        <Rectangle Fill="{StaticResource BackgrountLighterGrey}" 
                   Grid.Column="2"/>
        <Grid Grid.Column="2"  DataContext="{Binding SelectedTask}">
            <Grid.RowDefinitions>
                <RowDefinition Height="250"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            
            <!--Task Info Panel-->
            <Grid Grid.Row="0"
                  Margin="20 0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>

                <!--Tash Title-->
                <TextBlock Grid.Row="0"
                           Text="{Binding Name}"
                           Style="{StaticResource Title}"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"/>
                
                <!--Task Type Badge-->
                <Border HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Padding="20 3"
                        CornerRadius="3"
                        Background="{StaticResource TypeBadgeColor}">
                    <TextBlock Text="{Binding Type}"
                               Foreground="{StaticResource DefaultText}"
                               FontSize="14"
                               FontWeight="Bold">
                        
                    </TextBlock>
                </Border>
                
                <!--Task Description-->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <TextBlock 
                       Text="{Binding Description}"
                       Foreground="{StaticResource DefaultText}"
                       FontSize="14"
                       Margin="0 20">
                    </TextBlock>
                </ScrollViewer>
                
                <!--Task additional information-->
                <TextBlock Grid.Row="2"
                           Text="{Binding DueDate, StringFormat='{}{0:dd/MM/yyyy}'}"
                           Background="{StaticResource MainThemeColor}"
                           Padding="30 3"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Left"
                           FontSize="14"
                           FontWeight="Bold"
                           Foreground="White">
                    
                </TextBlock>
                <!--Task Status Badge-->
                <Border Grid.Row="2"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Padding="20 3"
                        CornerRadius="3"
                        Background="{StaticResource OnHoldColor}">
                    <TextBlock Text="{Binding Status}"
                        Foreground="{StaticResource DefaultText}"
                        FontSize="14"
                        FontWeight="Bold">
                    </TextBlock>
                </Border>
            </Grid>
            
            <!--Comments Section-->
            <Grid Grid.Row="1" Margin="0 0 20 0" Background="Transparent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0"
                       Style="{StaticResource Heading1}" 
                       Content="Comments"
                       IsHitTestVisible="False"
                       VerticalAlignment="Center"
                       Margin="20 0 0 0"/>

                <!-- Add Comment button -->
                <Button Grid.Row="0" Grid.Column="1"
                        Content="Add Comment"
                        Command="{Binding DataContext.AddCommentCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        Style="{StaticResource SquareButton}"
                        Width="110"
                        Height="30"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Margin="0 0 10 0"/>

                <!-- Commennts ListView -->
                <ScrollViewer Grid.Row="1" Grid.ColumnSpan="2"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled"
                              Margin="0 10 0 0">
                    <ListView ItemsSource="{Binding Comments}"
                              Background="Transparent"
                              BorderThickness="0"
                              HorizontalContentAlignment="Stretch">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Margin="0 5"
                                        Padding="10"
                                        Background="{StaticResource BackgrountDarkerGrey}"
                                        CornerRadius="5">
                                    <StackPanel>
                                        <TextBlock Text="{Binding CommentText}"
                                                   Foreground="{StaticResource DefaultText}"
                                                   FontSize="14"
                                                   TextWrapping="Wrap" />
                                        <TextBlock Text="{Binding DateAdded, StringFormat='{}{0:dd/MM/yyyy HH:mm}'}"
                                                   FontSize="12"
                                                   Foreground="Gray"
                                                   HorizontalAlignment="Right"/>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                                            <Button Content="🕓"
                                                    ToolTip="View History"
                                                    Command="{Binding DataContext.ShowCommentHistoryCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource IconButton}"
                                                    Margin="5 0"/>
                                            <Button Content="✎"
                                                    Command="{Binding DataContext.EditCommentCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource IconButton}"
                                                    Margin="0 0 5 0"/>
                                            <Button Content="🗑"
                                                    Command="{Binding DataContext.DeleteCommentCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource IconButton}"/>
                                            
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </Grid>

            <!--Task Action Buttons-->
            <Grid Grid.Row="2">
                <Button HorizontalAlignment="Left"
                        VerticalAlignment="Center"/>
                <Button HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                <Button HorizontalAlignment="Right"
                        VerticalAlignment="Center"/>
            </Grid>
        </Grid>
        
        
        
    </Grid>
</Window>
