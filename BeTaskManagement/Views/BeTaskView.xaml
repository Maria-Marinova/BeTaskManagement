<Window x:Class="BeTaskManagement.Views.BeTaskView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeTaskManagement.Views"
        xmlns:localHelpers="clr-namespace:BeTaskManagement.Helpers"
        xmlns:mod="clr-namespace:BeTaskManagement.Models.Enums"
        mc:Ignorable="d"
        Title="BeTaskView" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Name"/>
            <TextBox Text="{Binding Task.Name}" Width="400"/>

            <TextBlock Text="Description"/>
            <TextBox Text="{Binding Task.Description}" Width="400"/>

            <TextBlock Text="Required By"/>
            <DatePicker SelectedDate="{Binding Task.RequiredByDate}" Width="200"/>

            <!--<TextBlock Text="Status"/>
            <ComboBox ItemsSource="{Binding StatusList}" SelectedItem="{Binding Task.Status}" Width="200"/>-->

            <TextBlock Text="Status"/>
            <ComboBox SelectedItem="{Binding Task.Status}" 
                      ItemsSource="{Binding Source={localHelpers:EnumHelper {x:Type mod:BeTaskStatus}}}" 
                      Width="200"/>

            <!--<TextBlock Text="Type"/>
            <ComboBox ItemsSource="{Binding TypeList}" SelectedItem="{Binding Task.Type}" Width="200"/>-->

            <TextBlock Text="Type"/>
            <ComboBox SelectedItem="{Binding Task.Type}" 
                      ItemsSource="{Binding Source={localHelpers:EnumHelper {x:Type mod:BeTaskType}}}" 
                      Width="200"/>

            <TextBlock Text="Assigned To"/>
            <ComboBox ItemsSource="{Binding Users}"
                      SelectedValue="{Binding Task.AssignedToUserId, Mode=TwoWay}"
                      SelectedValuePath="UserId"
                      DisplayMemberPath="FullName"
                      Width="200"/>
        </StackPanel>

        <GroupBox Header="Comments" Grid.Row="1">
            <Grid>
                <DataGrid ItemsSource="{Binding Comments}" SelectedItem="{Binding SelectedComment}" AutoGenerateColumns="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Text" Binding="{Binding CommentText}" Width="*"/>
                        <DataGridTextColumn Header="Type" Binding="{Binding CommentType}" Width="100"/>
                        <DataGridTextColumn Header="Reminder" Binding="{Binding ReminderDate}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                    <Button Content="Add" Command="{Binding AddCommentCommand}" Margin="5"/>
                    <Button Content="Delete" Command="{Binding DeleteCommentCommand}" Margin="5"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <Button Content="Save Task" Grid.Row="2" HorizontalAlignment="Right" Command="{Binding SaveTaskCommand}" Margin="5"/>
    </Grid>
</Window>
